    <!-- SCRIPTS -->
    <script>
        // --- CONFIG: TERMINAL STYLE CHART ---
        Chart.defaults.color = '#666';
        Chart.defaults.font.family = "'JetBrains Mono', monospace";
        
        // --- 1. EXOTIC STATES RADAR (DATA FROM UPLOADED FILE) ---
        const ctxRadar = document.getElementById('exoticChart').getContext('2d');
        
        // Labels from your JS file
        const stateLabels = [
            'Stalker Pro Max', 
            'Шизо-Нумерология', 
            'What-If Петля', 
            'Архивариус Боли', 
            'Текстовый Гоблин'
        ];

        new Chart(ctxRadar, {
            type: 'radar',
            data: {
                labels: stateLabels,
                datasets: [{
                    label: 'CURRENT LEVEL',
                    data: [90, 45, 80, 20, 60], // High Stalking, High What-If
                    backgroundColor: 'rgba(57, 255, 20, 0.2)', // Toxic Green
                    borderColor: '#39ff14',
                    borderWidth: 2,
                    pointBackgroundColor: '#000',
                    pointBorderColor: '#39ff14',
                    pointHoverBackgroundColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    r: {
                        angleLines: { color: '#1a1a1a' }, // Dark grid
                        grid: { color: '#1a1a1a' },
                        pointLabels: {
                            color: (context) => {
                                // Highlight specific labels
                                return context.label.includes('Stalker') ? '#ff0033' : '#a3a3a3';
                            },
                            font: { size: 10 }
                        },
                        ticks: { display: false, backdropColor: 'transparent' }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: '#000',
                        titleColor: '#39ff14',
                        bodyColor: '#fff',
                        borderColor: '#333',
                        borderWidth: 1,
                        cornerRadius: 0,
                        displayColors: false,
                        callbacks: {
                            label: function(context) {
                                // CUSTOM ROASTS BASED ON VALUE
                                const val = context.raw;
                                if (val > 80) return `>> CRITICAL: STOP REFRESHING THE PAGE`;
                                if (val > 50) return `>> WARNING: You look desperate`;
                                return `>> STABLE (for now)`;
                            }
                        }
                    }
                }
            }
        });

        // --- 2. ANXIETY LINE CHART (REALITY CHECK) ---
        const ctxLine = document.getElementById('anxietyLine').getContext('2d');
        
        new Chart(ctxLine, {
            type: 'line',
            data: {
                labels: ['Send Text', 'Read (No reply)', '10m', '30m', '1h', '3h'],
                datasets: [{
                    label: 'SELF-RESPECT',
                    data: [100, 10, 5, 2, 0, -10],
                    borderColor: '#ff0033', // Red for danger
                    borderDash: [5, 5],
                    tension: 0.1,
                    pointRadius: 0
                },
                {
                    label: 'ANXIETY',
                    data: [20, 90, 95, 100, 100, 100],
                    borderColor: '#ccff00', // Acid Yellow
                    backgroundColor: 'rgba(204, 255, 0, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: { grid: { color: '#1a1a1a' } },
                    y: { display: false, grid: { color: '#1a1a1a' } }
                },
                plugins: {
                    legend: { 
                        labels: { color: '#666', boxWidth: 10, usePointStyle: true, pointStyle: 'rect' } 
                    },
                    tooltip: {
                        backgroundColor: '#000',
                        borderColor: '#ff0033',
                        borderWidth: 1,
                        cornerRadius: 0,
                        callbacks: {
                            title: () => 'STATUS UPDATE:'
                        }
                    }
                }
            }
        });
    </script>
